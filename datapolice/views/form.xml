<?xml version="1.0"?>
<odoo>
  <data noupdate="0">
    <record id="view_data_police_form" model="ir.ui.view">
      <field name="name">data.police form</field>
      <field name="model">data.police</field>
      <field name="arch" type="xml">
        <form string="" version="7.0">
          <header>
            <button name="run" string="Run" type="object" icon="gtk-execute" context="{'from_ui': True}"/>
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
              </button>
              <button name="show_errors" type="object">
                <field name="errors"/>
              </button>
            </div>
            <group col="4">
              <field name="cronjob_group_id"/>
              <field name="name"/>
            </group>
            <notebook>
              <page string="Triggers">
                <field name="trigger_ids">
                  <tree editable="bottom">
                    <field name="domain"/>
                    <field name="method"/>
                    <field name="model_id"/>
                    <field name="link_expression"/>
                  </tree>
                </field>
              </page>
              <page string="Fetch Data">
                <group>
                  <field name="model_id" required='1'/>
                  <field name="domain" placeholder="[('name', 'ilike', 'its me')]" attrs="{'invisible': [('fetch_expr', '!=', False)]}"/>
                  <field name="fetch_expr" attrs="{'invisible': [('domain', '!=', False)]}"/>
                  <div attrs="{'invisible': [('domain', '!=', False)]}">
                  Available: model
                  </div>
                </group>
              </page>
              <page string="Check">
                <field name="check_expr" widget="ace"/>
              </page>
              <page string="Fix">
                <field name="fix_expr" widget="ace"/>
              </page>
              <page string="Assignees">
                <group>
                  <field name="user_ids" widget="many2many_tags"/>
                  <field name="recipients"/>
                  <field name="inform_current_user_immediately"/>
                </group>
              </page>
              <page string="Last Errors">
                <field name="last_errors" nolabel="1" readonly="1"/>
              </page>

            </notebook>

          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>
